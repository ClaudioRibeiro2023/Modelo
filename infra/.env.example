# ============================================
# Infrastructure Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# PostgreSQL
POSTGRES_USER=template
POSTGRES_PASSWORD=template_secret
POSTGRES_DB=template_db
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin_secret
KEYCLOAK_HTTP_PORT=8080
KEYCLOAK_REALM=template
KEYCLOAK_CLIENT_ID=template-web
KEYCLOAK_CLIENT_SECRET=

# API
API_PORT=8000
API_SECRET_KEY=your-secret-key-here
API_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
API_REDIS_URL=redis://redis:6379

# Frontend
VITE_API_URL=http://localhost:8000/api
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=template
VITE_KEYCLOAK_CLIENT_ID=template-web

# Development
COMPOSE_PROJECT_NAME=template-platform
